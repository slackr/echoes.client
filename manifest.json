{
    "name": "Echoes Encrypted Messenger",
    "description": "End-to-End Encrypted Messaging",
    "short_name": "Echoes",
    "version": "0.1.6",
    "manifest_version": 2,
    "minimum_chrome_version": "37",
    "app": {
        "background": {
            "scripts": ["app/background.js"]
        }
    },
    "permissions": [
        "storage",
        "http://localhost/",
        "http://127.0.0.1/",
        "https://echoes.im/",
        "https://io.echoes.im/",
        "https://echoes.azurewebsites.net/",
        "https://echoes-io.azurewebsites.net/"
    ],
    "icons": {
        "16": "app/assets/icon-16.png",
        "24": "app/assets/icon-24.png",
        "32": "app/assets/icon-32.png",
        "48": "app/assets/icon-48.png",
        "64": "app/assets/icon-64.png",
        "128": "app/assets/icon-128.png"
    }
}
